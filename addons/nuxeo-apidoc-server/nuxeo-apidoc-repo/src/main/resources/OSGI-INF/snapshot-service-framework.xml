<?xml version="1.0"?>
<component name="org.nuxeo.apidoc.snapshot.SnapshotManagerComponent">

  <implementation class="org.nuxeo.apidoc.snapshot.SnapshotManagerComponent" />

  <service>
    <provide interface="org.nuxeo.apidoc.snapshot.SnapshotManager" />
  </service>

  <extension-point name="graphs">
    <documentation>
      Extension point for graphs generation.
    </documentation>
    <object class="org.nuxeo.apidoc.snapshot.GraphGeneratorDescriptor" />
  </extension-point>

  <extension target="org.nuxeo.apidoc.snapshot.SnapshotManagerComponent" point="graphs">
    <graphGenerator name="basic" class="org.nuxeo.apidoc.introspection.graph.BasicGraphGeneratorImpl" />
    <graphGenerator name="jgrapht" class="org.nuxeo.apidoc.introspection.graph.JGraphGeneratorImpl" />
    <graphGenerator name="gephi" class="org.nuxeo.apidoc.introspection.graph.GephiGraphGeneratorImpl">
      <properties>
        <property name="forceLayout.timeout">60</property>
      </properties>
    </graphGenerator>
  </extension>

</component>
